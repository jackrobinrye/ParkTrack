<h1>Add New Sighting!</h1>

<%= form_for @sighting do |f| %>
    <h3>Date:</h3>
    <%= f.date_field :date, max: Date.today %><br>
    <br>
    
    <h3>Species</h3>
    <%= f.fields_for :species do |sf| %>
        <%= sf.label :name, "Name:" %>
        <%= sf.text_field :name %>
        <br>
        <%= sf.label :kingdom, "Kingdom:" %>
        <%= sf.select(:kingdom, kingdoms, {include_blank: true}) %>
    <% end %>

    <br>
    <br>

    <h3>Park</h3>
    Existing Park:
    <%= f.collection_select(:park_id, Park.all, :id, :name, prompt: true) %>
    <h4>OR</h4>
    <%= f.fields_for :parks do |pf| %>
        Add New Park:<br>
        <%= pf.label :name, "Name:" %>
        <%= pf.text_field :name %>
        <br>
        <%= pf.label :location, "State:" %>
        <%= pf.select(:location, us_states, {include_blank: true}) %>
        <br>
        <%= pf.label :size, "Size (square feet):" %>
        <%= pf.number_field :size %>
        <br>
    <% end %>

    <%= f.hidden_field(:user_id, value: @sighting.user_id) %>
            
    <%= f.submit "Add Sighting" %>

<% end %>
<% if arr.empty? || arr == "" %>
    <li> Nothing yet! </li>
<% else %>

<% Species.kingdoms.each do |kname| %>
    <% if !Species.this_kingdom(arr, kname).empty? %>
        <h3><%= kname %>:</h3>
        <ul>
        <% Species.this_kingdom(arr, kname).each do |species| %>
            <li><%= link_to species.name, species_path(species) %></li>
        <% end %>
        </ul>
    <% end %>
<% end %>





<% if false %>
    <h2>Animalia:</h2>
    <ul>
        <% Species.animalia(arr).compact!.each do |item| %>
            <li><%= link_to item.name, species_path(item) %></li>
        <% end %>
    </ul>

    <h2>Plantae:</h2>
    <ul>
        <% Species.plantae(arr).compact!.each do |item| %>
            <li><%= link_to item.name, species_path(item) %></li>
        <% end %>
    </ul>

    <h2>Fungi:</h2>
    <ul>
        <% Species.fungi(arr).compact!.each do |item| %>
            <li><%= link_to item.name, species_path(item) %></li>
        <% end %>
    </ul>

<% end %>

<% end %>